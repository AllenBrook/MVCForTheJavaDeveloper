@model IEnumerable<MVCToDo.Models.ToDo>

@{
    ViewBag.Title = "To Dos";
}

<h2>To Dos</h2>

@if (ViewBag.Messge != null) {
	<h3>@ViewBag.Message</h3>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Status.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ToDoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ToDoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ToDoID })
        </td>
    </tr>
}

</table>
